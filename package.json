{
  "name": "@saiuttej/nestjs-mailer",
  "version": "0.1.2",
  "description": "NestJs Module built to send mails",
  "author": "B Sai Uttej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saiuttej-b/nestjs-mailer"
  },
  "bugs": {
    "url": "https://github.com/saiuttej-b/nestjs-mailer/issues"
  },
  "keywords": [
    "nestjs",
    "mails",
    "ses",
    "mailtrap"
  ],
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublish": "npm run build",
    "start": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "local": "pnpm i && pnpm build && pnpm pack"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "nodemailer": "^6.9.4"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.738.0",
    "mailtrap": "^4.2.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^6.4.19",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^30.0.5",
    "nodemailer": "^6.9.4",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      ".module.ts"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "unrs-resolver"
    ]
  }
}
